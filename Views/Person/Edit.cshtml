@model MVC2.Models.Person

@{
    ViewData["Title"] = "Sửa thông tin";
}

<p class="h3">You're editing:</p>

<form asp-action="Edit">
     @Html.AntiForgeryToken()
    <div>
    <h1 class="display-4 text-center">Edit Member</h1>
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label for="FirtName">Firt Name: </label>  
            @Html.TextBoxFor(m => m.FirtName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirtName)
        </div>

        <div class="form-group">
            <label for="LastName">Last Name: </label>           
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="form-group">
            <label for="Gender">Gender: </label>
            <select class="form-control" name="Gender" id="Gender">
                <option value="None" selected>Please select a gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <div class="form-group">
            <label for="City">City: </label>
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.City)
        </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-sm btn-outline-primary" /> |
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }